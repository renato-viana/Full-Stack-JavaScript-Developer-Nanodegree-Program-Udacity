{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "plugins": [
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "ignorePatterns": ["**/*.js"],
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "no-console": "off",
        "max-classes-per-file": ["error", 10],
        "no-param-reassign": 0,
        "quotes": [
            "error",
            "double"
        ],
        "prettier/prettier": [
            "error",
            {
                "endOfLine": "auto"
            }
        ]
    }
}